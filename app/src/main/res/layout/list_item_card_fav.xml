<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="7dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="2dp">


        <RelativeLayout
            android:id="@+id/parallaxContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/image_fav"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:elevation="10dp"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"
                android:src="@color/md_drawer_background"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/image_fav1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="17dp"
                android:layout_alignBottom="@+id/image_fav"
                android:layout_alignRight="@+id/image_fav"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"
                android:src="@drawable/icon_fav"
                android:scaleType="centerCrop" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Titre fav"
            android:id="@+id/nom_fav"
            android:textSize="23dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            />


















        </android.support.v7.widget.CardView>


</FrameLayout>